<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Local{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body id="{% block body_id %}{% endblock %}">


{% block nav %}

    <nav id="main-nav" class="container-fluid navbar navbar-expand-lg navbar bg-light border rounded ">
        <img src="{{ asset('logo.jpg') }}" alt="Logo" width="80px" height="80px">
        <div class="col-md-12">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item {% if mainNavHome is defined %}active{% endif %}">
                    <a class="nav-link" href="{{ path('homepage') }}">Accueil</a>
                </li>
                <li class="nav-item {% if mainNavHome is defined %}active{% endif %}">
                    <a class="nav-link" href="{{ path('offer') }}">Nos offres</a>
                </li>
                <li class="nav-item {% if mainNavHome is defined %}active{% endif %}">
                    <a class="nav-link" href="{{ path('actu') }}">Actualités</a>
                </li>

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('easyadmin') }}">Tableau de bord</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}

                    <li>
                        <a class="nav-link" href="{{ path('formule_index') }}">Commander</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                    </li>

                {% else %}

                    <li class="nav-item {% if mainNavHome is defined %}non-active{% endif %}">
                        <a class="nav-link" href="{{ path('app_login') }}">Commander</a>
                    </li>
                    <li class="nav-item {% if mainNavLogin is defined %}active{% endif %}">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    <li class="nav-item {% if mainNavRegistration is defined %}active{% endif %}">
                        <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
{% endblock %}

{% block flash %}
    {% for flash_message in app.session.flashbag.get('success') %}
        <div class="container alert alert-success" role="alert">
            {{ flash_message }}
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashbag.get('info') %}
        <div class="container alert alert-info" role="alert">
            {{ flash_message }}
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashbag.get('warning') %}
        <div class="container alert alert-warning" role="alert">
            {{ flash_message }}
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashbag.get('danger') %}
        <div class="container alert alert-danger" role="alert">
            {{ flash_message }}
        </div>
    {% endfor %}
{% endblock %}

<div class="container-fluid bck1 padded" style="padding: 0">
    {% block body %}
    {% endblock %}
</div>

<footer class="page-footer">
    <div class="container col-md-12 row">
        <div class="col-md-4">

            <div>
                <ul style="list-style-type: none;">
                    <li class="nav-item {% if mainNavHome is defined %}active{% endif %}">
                        <a class="nav-link" href="{{ path('homepage') }}">Accueil</a>
                    </li>
                    <li class="nav-item {% if mainNavHome is defined %}active{% endif %}">
                        <a class="nav-link" href="{{ path('offer') }}">Nos offres</a>
                    </li>
                    <li class="nav-item {% if mainNavHome is defined %}active{% endif %}">
                        <a class="nav-link" href="{{ path('actu') }}">Actualités</a>
                    </li>

                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('easyadmin') }}">Tableau de bord</a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}

                        <li>
                            <a class="nav-link" href="{{ path('formule_index') }}">Commander</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                        </li>

                    {% else %}

                        <li class="nav-item {% if mainNavHome is defined %}non-active{% endif %}">
                            <a class="nav-link" href="{{ path('app_login') }}">Commander</a>
                        </li>
                        <li class="nav-item {% if mainNavLogin is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                        </li>
                        <li class="nav-item {% if mainNavRegistration is defined %}active{% endif %}">
                            <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
        <div>
            <div>
                <h3>Contact</h3>
            </div>
            <div>
                <ul>
                    <li>
                        Du Lundi au Samedi
                    </li>
                    <li>
                        De 7h à 18h
                    </li>
                    <li>
                        bikealinge@gmail.com
                    </li>
                    <li>
                        06 23 37 94 61
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <i class="fa fa-copyright"></i> Bikealinge 2020
    </div>
</footer>

{% block javascripts %}{% endblock %}
</body>
</html>