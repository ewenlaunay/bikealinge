{% extends 'base.html.twig' %}

{% block title %}Bike à linge{% endblock %}

{% block body %}

    <section class="textoverpic">

        <h1 class="shadow">VOTRE LINGE LAVÉ, SÉCHÉ & REPASSÉ EN 24H CHRONO*!</h1>
        <h4 class="shadow">*Retrait et livraison inclus</h4>

    </section>

    <section class="section1">
        <h1>Comment ça marche ?</h1>
    </section>
    <hr>
    <section class="pop section2 col-md-12">
        <div class="title-home">

        </div>
        <div class="title-home">
            <h1> Deux formules au choix</h1>
        </div>
        <div class="row col-md-12">
            <div class="col-md-6">
                <div class="card-body bg-light card-home">
                    <h1>Formule Bicycle</h1>
                    <hr>
                    <div class="icon-accueil">
                        <img src="{{ "build/bike.svg" }}" alt="" style="width: 100px; height: 100px;">
                    </div>
                    <div class="price">
                        <b><p>12€</p></b>
                    </div>
                    <div class="icon-accueil">
                        <img src="{{ "build/clothes.svg" }}" alt="" style="width: 50px; height: 50px;">
                    </div>
                    <p>7kg de linge</p>
                    <div class="icon-accueil">
                        <img src="{{ "build/washer.svg" }}" alt="" style="width: 50px; height: 50px;">
                    </div>
                    <p>Lavé, séché, PLIÉ & livré</p>
                    <button type="button" class="btn btn-secondary"><a href="{{ path("order_new") }}"
                                                                       style="color: white;">Commander</a></button>
                </div>

            </div>
            <div class="col-md-6">
                <div class="card-body bg-light card-home">
                    <h1>Formule Tricycle</h1>
                    <hr>
                    <div class="icon-accueil">
                        <img src="{{ "build/bike.svg" }}" alt="" style="width: 100px; height: 100px;">
                    </div>
                    <div class="price">
                        <b><p>15€</p></b>
                    </div>
                    <div class="icon-accueil">
                        <img src="{{ "build/clothes.svg" }}" alt="" style="width: 50px; height: 50px;">
