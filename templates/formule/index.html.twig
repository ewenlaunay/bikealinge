{% extends 'base.html.twig' %}

{% block title %}Formule index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <h1>Choisir une formule</h1>
    </div>
    {% for formule in formules %}
        <form method="POST" action="{{ path('clothe_index') }}">
        <div class="d-flex justify-content-center">
            <label>
                <input type="radio">{{ formule.label }}
            </label>
        </div>
    {% endfor %}
    <div class="d-flex justify-content-center">
        <label>
            <input type="submit">
        </label>
    </div>
    </form>



{% endblock %}
