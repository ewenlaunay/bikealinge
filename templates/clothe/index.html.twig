{% extends 'base.html.twig' %}

{% block title %}Clothe index{% endblock %}

{% block body %}
    <h1>Clothe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Composition</th>
                <th>WeightAdult</th>
                <th>WeightChild</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for clothe in clothes %}
            <tr>
                <td>{{ clothe.id }}</td>
                <td>{{ clothe.title }}</td>
                <td>{{ clothe.composition }}</td>
                <td>{{ clothe.weightAdult }}</td>
                <td>{{ clothe.weightChild }}</td>
                <td>
                    <a href="{{ path('clothe_show', {'id': clothe.id}) }}">show</a>
                    <a href="{{ path('clothe_edit', {'id': clothe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('clothe_new') }}">Create new</a>
{% endblock %}
