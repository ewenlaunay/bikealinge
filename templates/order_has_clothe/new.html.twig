{% extends 'base.html.twig' %}

{% block title %}Choisissez vos vêtements{% endblock %}

{% block body %}
    <div class="col-md-12 d-flex justify-content-center">
        <div class="card-body bg-light col-md-4 card-clothe2">
            <div class="d-flex justify-content-center">
                <h2>Choisissez vos vêtements</h2>
            </div>
            {{ include('order_has_clothe/_form.html.twig') }}
        </div>
        <div class="card-body bg-light col-md-4 card-clothe2">
            <div class="d-flex justify-content-center">
                <h2>Récapitulatif de votre commande</h2>
            </div>
            <div class="card-body listrecap">
                <ul>
                    {% for ohc in order_has_clothe.order.orderHasClothes %}
                        <li>{{ ohc.clothe }} {{ ohc.weight }}kg</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="d-flex justify-content-center row col-md-12">
                <div class="col-md-12">
                    <p>Total: {{ order_has_clothe.order.weight }}kg</p>
                </div>
                <div class="d-flex justify-content-center col-md-12">
                    {% if order_has_clothe.order.weight <= 7 %}
                        <p>Vous pouvez aller jusqu'à 7kg de linge</p>
                    {% else %}
                        <p>Vous avez dépassé les 7kg de linge nous vous compterons donc une deuxiéme formule, vous
                            pouvez aller jusqu'à 14kg.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center buttonclothe">
        <button type="button" class="btn btn-primary"><a href="{{ path('mean_of_paiement_index') }}"
                                                         style="color: white">Suivant</a>
        </button>
    </div>
{% endblock %}
